          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    },
                    "entity": {
                      "type": "object"
                    },
                    "patterns": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "exceptions": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "availabilitySlots": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "careRequests": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "shiftAssignments": {
                      "type": "array",
