{
  "openapi": "3.1.0",
  "info": {
    "title": "Scheduler MVP API",
    "description": "API for the Scheduler MVP system, managing caregivers, clients, and scheduling.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],
  "paths": {
    "/api/availability/tools/add": {
      "post": {
        "summary": "Add Availability Pattern",
        "description": "Adds a new recurring availability pattern for a caregiver.",
        "operationId": "addAvailabilityPattern",
        "tags": [
          "Availability"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "caregiver_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "frequency": {
                    "type": "string",
                    "enum": [
                      "WEEKLY"
                    ]
                  },
                  "days": {
                    "type": "string",
                    "example": "MO,WE"
                  },
                  "local_start_time": {
                    "type": "string",
                    "format": "time",
                    "example": "09:00:00"
                  },
                  "local_end_time": {
                    "type": "string",
                    "format": "time",
                    "example": "17:00:00"
                  }
                },
                "required": [
                  "caregiver_id",
                  "frequency",
                  "days",
                  "local_start_time",
                  "local_end_time"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/availability/tools/create-exception": {
      "post": {
        "summary": "Create Availability Exception",
        "description": "Adds a 'Time Off' exception for a caregiver.",
        "operationId": "createAvailabilityException",
        "tags": [
          "Availability"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "caregiver_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "start_dt": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "end_dt": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "is_available": {
                    "type": "boolean"
                  },
                  "reason": {
                    "type": "string"
                  }
                },
                "required": [
                  "caregiver_id",
                  "start_dt",
                  "end_dt",
                  "is_available"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
