        "operationId": "getClientDetails",
        "tags": [
          "Client"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "client": {
                      "type": "object"
                    },
                    "careRequests": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "carePatterns": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "careExceptions": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "shiftAssignments": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "preferredCaregivers": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "blacklistedCaregivers": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "stats": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
